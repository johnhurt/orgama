<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>CUSTOM-Deploy</actionName>
        <displayName>Deploy</displayName>
        <goals>
            <goal>deploy</goal>
        </goals>
        <properties>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>
    <action>
        <actionName>clean</actionName>
        <goals>
            <goal>clean</goal>
        </goals>
    </action>
    <action>
        <actionName>rebuild</actionName>
        <goals>
            <goal>clean</goal>
            <goal>install</goal>
        </goals>
    </action>
    <action>
        <actionName>build</actionName>
        <goals>
            <goal>install</goal>
        </goals>
    </action>
    <action>
        <actionName>debug.test.single</actionName>
        <goals>
            <goal>test-compile</goal>
            <goal>surefire:test</goal>
        </goals>
        <properties>
            <jpda.listen>true</jpda.listen>
            <maven.surefire.debug>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</maven.surefire.debug>
            <jpda.stopclass>${packageClassName}</jpda.stopclass>
            <forkMode>once</forkMode>
            <test>${packageClassName}</test>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <goals>
            <goal>antrun:run</goal>
            <goal>-P</goal>
            <goal>ant-devmode</goal>
            <goal>-D</goal>
            <goal>target=devmode</goal>
        </goals>
        <properties>
            <jpda.address>debug port = ${jpda.address}</jpda.address>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>
    <action>
        <actionName>run</actionName>
        <goals>
            <goal>antrun:run</goal>
            <goal>-P</goal>
            <goal>ant-devmode</goal>
            <goal>-D</goal>
            <goal>target=devmode</goal>
        </goals>
        <properties>
            <debugArg>-Xms256M</debugArg>
        </properties>
    </action>
    <action>
        <actionName>profile</actionName>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.1.1:exec</goal>
        </goals>
        <properties>
            <exec.args>${profiler.args} -classpath %classpath ${package}.App</exec.args>
            <profiler.action>profile</profiler.action>
            <exec.executable>${profiler.java}</exec.executable>
        </properties>
    </action>
	<action>
		<actionName>CUSTOM-Deploy to AppEngine</actionName>
		<displayName>Deploy to AppEngine</displayName>
		<goals>
			<goal>antrun:run</goal>
		</goals>
		<activatedProfiles>
			<activatedProfile>deploy-to-app-engine</activatedProfile>
		</activatedProfiles>
	</action>


</actions>
